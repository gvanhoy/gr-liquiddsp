<?xml version="1.0"?>
<block>
  <name>flex_tx</name>
  <key>liquiddsp_flex_tx</key>
  <category>[liquiddsp]</category>
  <import>import liquiddsp</import>
  <make>liquiddsp.flex_tx($modulation, $inner_code, $outer_code)</make>

  <param>
   <name>Modulation</name>
    <key>modulation</key>
    <type>int</type>
  </param>
  <param>
   <name>Inner Code</name>
    <key>inner_code</key>
    <type>int</type>
  </param>
  <param>
   <name>Outer Code</name>
    <key>outer_code</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>pdus</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>pdus</name>
    <type>message</type>
  </source>
</block>
